import matplotlib.pyplot as plt
import numpy as np

# Sample data
x = np.random.rand(50)
y = np.random.rand(50)
colors = np.random.rand(50)

# Create scatter plot
plt.scatter(x, y, c=colors, cmap='viridis')
plt.colorbar()  # Add colorbar to show color scale
plt.show()


