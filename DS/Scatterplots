import matplotlib.pyplot as plt

# Sample data
x = np.random.rand(50)
y = np.random.rand(50)

# Creating the scatter plot
plt.scatter(x, y)

# Adding labels and title
plt.xlabel('Age (years)')
plt.ylabel('BMI')
plt.title('Scatter Plot: Age vs BMI')

# Display the plot
plt.show()

